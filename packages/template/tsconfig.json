{
  "compilerOptions": {
    "target": "ES5",
    "module": "CommonJS",
    "lib": [
      "ES2020",
    ],
    "allowJs": true, 
    "declaration": true,  
    "declarationMap": true,           
    "sourceMap": true,                  
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true ,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx", 
  ]
}