{
  "compilerOptions": {
    "target": "ES5",
    "module": "CommonJS",
    "lib": [
      "ES2020"
    ],
    "allowJs": true, 
    "declaration": true,  
    "declarationMap": true,           
    "sourceMap": true,                  
    "rootDir": "./",
    "outDir": "./dist-config",
    "strict": true ,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "./*.config.ts"
  ]
}